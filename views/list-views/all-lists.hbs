<h1>all lists</h1>

<div class="container">
    {{#each foundLists}}
        <div>
            <h3 style="font-size: 18px">{{title}}</h3>
                {{#each content}}
                    <p style="font-size: 13px;">{{this}}</p>
                {{/each}}

        <button class="bttn-container">
            <a href="/list/{{_id}}"  class="matchTagColors">view</a>
        </button>

        <form action="/list/{{_id}}/edit-list" method="get">
            <button type="submit" class="bttn-container">edit</button>
        </form>
    
        <form action="/list/{{_id}}/delete-list" method="post">
            <button type="submit" class="bttn-container">delete</button>
        </form>
        </div>
    {{/each}}
</div>

<br>

<button>
    <a href="/list/list-home"  class="matchTagColors">back</a>
</button>

